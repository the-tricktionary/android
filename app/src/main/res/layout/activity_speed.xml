<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="trictionary.jumproper.com.jumpropetrictionary.Speed"
    android:background="@drawable/background">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/black_bg"
        android:src="@drawable/plus"
        android:scaleType="fitCenter"
        android:clickable="true"
        android:tint="#000000"
        android:layout_centerInParent="true"
        android:layout_marginRight="70dp"
        android:padding="0dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/plus"
        android:src="@drawable/plus"
        android:scaleType="fitCenter"
        android:onClick="addJump"
        android:clickable="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="70dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/counter"
        android:textSize="40dp"
        android:layout_above="@+id/start_button"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/start_button"
        android:background="@drawable/rounded_corner_shadow"
        android:padding="10dp"
        android:onClick="startTimer"
        android:textColor="#424242"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0:00:0"
        android:id="@+id/timer"
        android:textSize="40dp"
        android:visibility="visible"
        android:layout_below="@+id/duration"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0:30"
        android:id="@+id/duration"
        android:textSize="20dp"
        android:autoText="false"
        android:background="@drawable/rounded_corner_shadow"
        android:padding="7dp"
        android:onClick="chooseDuration"
        android:clickable="true"
        android:layout_alignTop="@+id/back_arrow"
        android:layout_toStartOf="@+id/start_button"
        android:layout_marginTop="5dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dropdown_arrow"
        android:layout_alignTop="@+id/duration"
        android:layout_toEndOf="@+id/duration"
        android:src="@android:drawable/arrow_down_float"
        android:padding="10dp"
        android:onClick="chooseDuration"
        android:clickable="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/back_arrow"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/abc_ic_ab_back_material"
        android:padding="10dp"
        android:alpha=".75"
        android:onClick="mainMenu" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Timing Track"
        android:id="@+id/timing_track"
        android:layout_alignTop="@+id/dropdown_arrow"
        android:layout_toEndOf="@+id/dropdown_arrow"
        android:background="@drawable/rounded_corner_shadow"
        android:textColor="#414140"
        android:padding="11dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select an event duration then either press start or count the first jump to begin the timer"
        android:id="@+id/instructions"
        android:layout_below="@+id/timer"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="12dp" />


</RelativeLayout>
