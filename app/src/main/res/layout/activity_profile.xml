<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="trictionary.jumproper.com.jumpropetrictionary.activities.Profile"
    android:background="@drawable/background">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        app:srcCompat="@drawable/ic_account_circle_black_24dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/profile_image"
        android:layout_width="64dp"
        android:layout_height="64dp" />

        <trictionary.jumproper.com.jumpropetrictionary.customviews.MyGridView
            android:id="@+id/basics_grid_view_profile"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/basics_title_profile"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_corner_shadow"
            android:drawSelectorOnTop="true"
            android:numColumns="3"
            android:stretchMode="columnWidth"
            android:verticalSpacing="8dp" />

        <TextView
            android:id="@+id/level_1_title_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_alignParentLeft="false"
            android:layout_alignParentRight="false"
            android:layout_alignParentTop="false"
            android:layout_below="@+id/basics_grid_view_profile"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_corner_shadow_red"
            android:padding="8dp"
            android:text="@string/level_1"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <trictionary.jumproper.com.jumpropetrictionary.customviews.MyGridView
            android:id="@+id/level_1_grid_view_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/level_1_title_profile"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_corner_shadow"
            android:drawSelectorOnTop="true"
            android:numColumns="3"
            android:stretchMode="columnWidth"
            android:verticalSpacing="8dp" />

        <TextView
            android:id="@+id/level_2_title_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_alignParentLeft="false"
            android:layout_alignParentRight="false"
            android:layout_alignParentTop="false"
            android:layout_below="@+id/level_1_grid_view_profile"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_corner_shadow_red"
            android:padding="8dp"
            android:text="@string/level_2"
            android:textColor="#ffffff"
            android:textSize="18sp" />

    <trictionary.jumproper.com.jumpropetrictionary.customviews.MyGridView
        android:id="@+id/level_2_grid_view_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner_shadow"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/level_2_title_profile"
        android:layout_marginTop="16dp"
        android:drawSelectorOnTop="true"
        android:numColumns="3"
        android:stretchMode="columnWidth"
        android:verticalSpacing="8dp" />

        <TextView
            android:id="@+id/level_3_title_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_alignParentLeft="false"
            android:layout_alignParentRight="false"
            android:layout_alignParentTop="false"
            android:layout_below="@+id/level_2_grid_view_profile"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_corner_shadow_red"
            android:padding="8dp"
            android:text="@string/level_3"
            android:textColor="#ffffff"
            android:textSize="18sp" />

    <trictionary.jumproper.com.jumpropetrictionary.customviews.MyGridView
        android:id="@+id/level_3_grid_view_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner_shadow"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/level_3_title_profile"
        android:layout_marginTop="16dp"
        android:drawSelectorOnTop="true"
        android:numColumns="3"
        android:stretchMode="columnWidth"
        android:verticalSpacing="8dp" />

        <TextView
            android:id="@+id/level_4_title_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_alignParentLeft="false"
            android:layout_alignParentRight="false"
            android:layout_alignParentTop="false"
            android:layout_below="@+id/level_3_grid_view_profile"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_corner_shadow_red"
            android:padding="8dp"
            android:text="@string/level_4"
            android:textColor="#ffffff"
            android:textSize="18sp" />

    <trictionary.jumproper.com.jumpropetrictionary.customviews.MyGridView
        android:id="@+id/level_4_grid_view_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner_shadow"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/level_4_title_profile"
        android:layout_marginTop="16dp"
        android:drawSelectorOnTop="true"
        android:numColumns="3"
        android:stretchMode="columnWidth"
        android:verticalSpacing="8dp"
        android:layout_marginBottom="@dimen/activity_vertical_margin" />

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_image"
            android:layout_centerHorizontal="true"
            android:gravity="right"
            android:padding="8dp"
            android:text="..."
            android:textAlignment="gravity"
            android:textSize="18sp" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/stats_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:alpha=".25"
            android:background="@android:color/black" />

        <Button
            android:id="@+id/view_another_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_username"
            android:layout_centerHorizontal="true"
            android:layout_margin="8dp"
            android:padding="8dp"
            android:text="@string/my_friends"
            android:textSize="14sp" />

        <RelativeLayout
            android:id="@+id/stats_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/view_another_profile"
            android:paddingBottom="8dp"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/num_tricks_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/num_level_1_tricks_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/level_1_tricks_mastered_profile"
                android:layout_alignParentEnd="true"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/num_level_2_tricks_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/level_2_tricks_mastered_profile"
                android:layout_alignParentEnd="true"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/num_level_3_tricks_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/level_3_tricks_mastered_profile"
                android:layout_alignParentEnd="true"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/num_level_4_tricks_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/level_4_tricks_mastered_profile"
                android:layout_alignParentEnd="true"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/level_1_tricks_mastered_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tricks_mastered_profile"
                android:padding="4dp"
                android:text="@string/level_1"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/level_2_tricks_mastered_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/level_1_tricks_mastered_profile"
                android:padding="4dp"
                android:text="@string/level_2"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/level_3_tricks_mastered_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/level_2_tricks_mastered_profile"
                android:padding="4dp"
                android:text="@string/level_3"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/level_4_tricks_mastered_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/level_3_tricks_mastered_profile"
                android:padding="4dp"
                android:text="@string/level_4"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tricks_mastered_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:padding="4dp"
                android:text="@string/total_tricks"
                android:textSize="12sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/basics_title_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/stats_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_corner_shadow_red"
            android:padding="8dp"
            android:text="@string/basics"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/share_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/profile_image"
            android:layout_toStartOf="@+id/profile_image"
            android:onClick="shareProfile"
            android:padding="8dp"
            app:srcCompat="@drawable/ic_menu_share_material" />

        <TextView
            android:id="@+id/profile_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_name"
            android:layout_centerHorizontal="true"
            android:padding="8dp"
            android:text="..." />

    </RelativeLayout>
</ScrollView>
