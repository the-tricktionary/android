<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_stats"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="trictionary.jumproper.com.jumpropetrictionary.Stats"
    tools:showIn="@layout/activity_stats"
    android:background="@drawable/background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_corner_shadow"
        android:alpha=".75"
        android:layout_below="@+id/textView33"
        android:layout_marginTop="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <Space
                android:id="@+id/space8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:id="@+id/num_tricks"
                android:textSize="20sp"
                android:layout_below="@+id/space8"
                android:textColor="@android:color/black" />
            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:id="@+id/num_level_1_tricks"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:layout_alignBaseline="@+id/level_1_tricks_mastered" />
            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:id="@+id/num_level_2_tricks"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:layout_alignBaseline="@+id/level_2_tricks_mastered" />
            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:id="@+id/num_level_3_tricks"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:layout_alignBaseline="@+id/level_3_tricks_mastered" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:id="@+id/num_level_4_tricks"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:layout_alignBaseline="@+id/level_4_tricks_mastered"
                android:text="0"
                android:textAlignment="viewEnd" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:id="@+id/average_tricks"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:layout_alignBaseline="@+id/average_tricks_title"
                android:text="0"
                android:textAlignment="viewEnd" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:id="@+id/max_tricks"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:layout_alignBaseline="@+id/max_tricks_title"
                android:text="0"
                android:textAlignment="viewEnd" />

            <TextView
                android:text="Level 1:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/level_1_tricks_mastered"
                android:gravity="bottom"
                android:layout_below="@+id/num_tricks"
                android:layout_marginTop="16dp" />
            <TextView
                android:text="Level 2:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/level_2_tricks_mastered"
                android:gravity="bottom"
                android:layout_below="@+id/num_level_1_tricks"
                android:layout_marginTop="16dp" />
            <TextView
                android:text="Level 3:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/level_3_tricks_mastered"
                android:gravity="bottom"
                android:layout_below="@+id/num_level_2_tricks"
                android:layout_marginTop="16dp" />
            <TextView
                android:text="Level 4:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/level_4_tricks_mastered"
                android:gravity="bottom"
                android:layout_below="@+id/num_level_3_tricks"
                android:layout_marginTop="16dp" />

            <TextView
                android:text="Tricks Mastered:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tricks_mastered"
                android:textAlignment="gravity"
                android:foregroundGravity="bottom"
                android:layout_above="@+id/level_1_tricks_mastered"
                android:layout_alignParentStart="true" />
            <TextView
                android:text="Average Tricks per User:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/average_tricks_title"
                android:gravity="bottom"
                android:layout_below="@+id/num_level_4_tricks"
                android:layout_marginTop="16dp" />
            <TextView
                android:text="Max Tricks per User:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/max_tricks_title"
                android:gravity="bottom"
                android:layout_below="@+id/average_tricks"
                android:layout_marginTop="16dp" />
        </RelativeLayout>
    </ScrollView>

    <TextView
        android:text="Public Statistics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView33"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="16dp"
        android:textSize="18sp"
        android:background="@drawable/rounded_corner_shadow"
        android:alpha=".75" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_ab_back_material"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/imageView35"
        android:padding="16dp"
        android:alpha=".75"
        android:onClick="back" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/account_circle"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/imageView36"
        android:alpha=".75"
        android:onClick="viewProfile" />

</RelativeLayout>
