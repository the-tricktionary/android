<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="trictionary.jumproper.com.jumpropetrictionary.TrickTree"
    android:background="@drawable/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TJ"
        android:id="@+id/current_trick"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_corner_shadow"
        android:alpha=".75"
        android:textSize="20dp"
        android:padding="5dp"
        android:onClick="viewTrick"
        android:clickable="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView9"
        android:layout_above="@+id/current_trick"
        android:layout_centerHorizontal="true"
        android:src="@android:drawable/arrow_up_float"
        android:padding="20dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView10"
        android:layout_below="@+id/current_trick"
        android:layout_centerHorizontal="true"
        android:src="@android:drawable/arrow_down_float"
        android:padding="20dp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:id="@+id/prereqs"
        android:layout_above="@+id/imageView9"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_corner_shadow"
        android:alpha=".75" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:id="@+id/next_tricks"
        android:layout_below="@+id/imageView10"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_corner_shadow"
        android:alpha=".75" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next Tricks"
        android:id="@+id/next_tricks_label"
        android:layout_below="@+id/current_trick"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prerequisites"
        android:id="@+id/prereqs_label"
        android:layout_above="@+id/current_trick"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Trick"
        android:id="@+id/view_trick"
        android:textSize="15dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/rounded_corner_shadow"
        android:alpha=".75"
        android:padding="4dp"
        android:onClick="viewTrick"
        android:layout_alignBottom="@+id/imageView10"
        android:layout_toEndOf="@+id/prereqs_label"
        android:layout_marginBottom="10dp"
        android:clickable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Tree"
        android:id="@+id/view_tree"
        android:textSize="15dp"
        android:background="@drawable/rounded_corner_shadow"
        android:alpha=".75"
        android:padding="4dp"
        android:onClick="viewTree"
        android:layout_below="@+id/prereqs"
        android:layout_alignStart="@+id/view_trick"
        android:layout_marginTop="10dp"
        android:clickable="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/next_image"
        android:src="@android:drawable/ic_media_play"
        android:layout_alignBottom="@+id/view_trick"
        android:layout_toEndOf="@+id/view_trick"
        android:alpha=".75"
        android:onClick="viewTrick" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/view_tree_play_image"
        android:src="@android:drawable/ic_media_play"
        android:alpha=".75"
        android:onClick="viewTree"
        android:layout_alignTop="@+id/view_tree"
        android:layout_toEndOf="@+id/view_tree" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView12"
        android:src="@drawable/abc_ic_ab_back_material"
        android:alpha=".75"
        android:focusable="false"
        android:onClick="mainMenu"
        android:padding="15dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true" />
</RelativeLayout>
