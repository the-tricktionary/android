
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background">
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jumproper.showmaker.Show">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Show:"
        android:id="@+id/events"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:alpha=".75"
        android:background="@drawable/rounded_corner_shadow"
        android:padding="10dp" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:id="@+id/break_events"
        android:alpha=".75"
        android:layout_below="@+id/events"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />
    <ListView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/sorted_show"
        android:layout_below="@+id/break_events"
        android:fadeScrollbars="true"
        android:fadingEdge="vertical|horizontal"
        android:fadingEdgeLength="30dp"
        android:fitsSystemWindows="false"
        android:smoothScrollbar="true"
        android:padding="10dp"
        android:background="@drawable/rounded_corner_shadow"
        android:alpha=".75"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
    </ListView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView26"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_ab_back_material"
        android:layout_above="@+id/break_events"
        android:layout_toStartOf="@+id/events"
        android:padding="10dp"
        android:onClick="backToWriter" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap an event to move it"
        android:id="@+id/textView19"
        android:layout_alignTop="@+id/events"
        android:layout_toEndOf="@+id/events"
        android:layout_alignBottom="@+id/events"
        android:padding="5dp"
        android:gravity="center" />


</RelativeLayout>
</ScrollView>

</LinearLayout>