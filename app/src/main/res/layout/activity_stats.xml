<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_stats"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="trictionary.jumproper.com.jumpropetrictionary.activities.Stats"
    android:background="@drawable/background">

    <ScrollView
        android:id="@+id/my_tricks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/adView"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:alpha=".75"
        android:background="@drawable/rounded_corner_shadow">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/num_tricks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tricks_mastered"
                android:layout_alignBottom="@+id/tricks_mastered"
                android:layout_alignParentEnd="true"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/num_users"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/total_users"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/num_users"
                android:layout_alignBottom="@+id/num_users"
                android:layout_alignParentStart="true"
                android:foregroundGravity="bottom"
                android:text="@string/total_users_title"
                android:textAlignment="gravity" />

            <TextView
                android:id="@+id/num_level_1_tricks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/level_1_tricks_mastered"
                android:layout_alignParentEnd="true"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/num_level_2_tricks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/level_2_tricks_mastered"
                android:layout_alignParentEnd="true"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/num_level_3_tricks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/level_3_tricks_mastered"
                android:layout_alignParentEnd="true"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/num_level_4_tricks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/level_4_tricks_mastered"
                android:layout_alignParentEnd="true"
                android:text="0"
                android:textAlignment="viewEnd"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/num_level_5_tricks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/level_5_tricks_mastered"
                android:layout_alignParentEnd="true"
                android:text="0"
                android:textAlignment="viewEnd"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/average_tricks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/average_tricks_title"
                android:layout_alignParentEnd="true"
                android:text="0"
                android:textAlignment="viewEnd"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/max_tricks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/max_tricks_title"
                android:layout_alignParentEnd="true"
                android:text="0"
                android:textAlignment="viewEnd"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/level_1_tricks_mastered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tricks_mastered"
                android:layout_marginTop="16dp"
                android:gravity="bottom"
                android:text="@string/level_1" />

            <TextView
                android:id="@+id/level_2_tricks_mastered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/level_1_tricks_mastered"
                android:layout_marginTop="16dp"
                android:gravity="bottom"
                android:text="@string/level_2" />

            <TextView
                android:id="@+id/level_3_tricks_mastered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/level_2_tricks_mastered"
                android:layout_marginTop="16dp"
                android:gravity="bottom"
                android:text="@string/level_3" />

            <TextView
                android:id="@+id/level_4_tricks_mastered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/level_3_tricks_mastered"
                android:layout_marginTop="16dp"
                android:gravity="bottom"
                android:text="@string/level_4" />

            <TextView
                android:id="@+id/level_5_tricks_mastered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/level_4_tricks_mastered"
                android:layout_marginTop="16dp"
                android:gravity="bottom"
                android:text="@string/level_5" />

            <TextView
                android:id="@+id/tricks_mastered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/total_users"
                android:layout_marginTop="16dp"
                android:gravity="bottom"
                android:text="@string/total_tricks" />

            <TextView
                android:id="@+id/average_tricks_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/level_5_tricks_mastered"
                android:layout_marginTop="16dp"
                android:gravity="bottom"
                android:text="@string/avg_tricks" />

            <TextView
                android:id="@+id/max_tricks_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/average_tricks_title"
                android:layout_marginTop="16dp"
                android:gravity="bottom"
                android:text="@string/max_tricks" />
        </RelativeLayout>
    </ScrollView>

    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/stats_ad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-2959515976305980/7302163690"></com.google.android.gms.ads.AdView>


</RelativeLayout>
