<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="trictionary.jumproper.com.jumpropetrictionary.Profile"
    tools:showIn="@layout/activity_profile"
    android:background="@drawable/background">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        app:srcCompat="@drawable/account_circle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/profile_image"
        android:layout_width="64dp"
        android:layout_height="64dp" />

        <trictionary.jumproper.com.jumpropetrictionary.MyGridView
        android:id="@+id/basics_grid_view_profile"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:background="@drawable/rounded_corner_shadow"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/basics_title_profile"
        android:layout_marginTop="16dp"
        android:drawSelectorOnTop="true"
        android:numColumns="3"
        android:stretchMode="columnWidth" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level 1"
        android:id="@+id/level_1_title_profile"
        android:background="@drawable/rounded_corner_shadow_red"
        android:textSize="18sp"
        android:layout_alignParentBottom="false"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="false"
        android:layout_below="@+id/basics_grid_view_profile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        android:textColor="#ffffff" />

    <trictionary.jumproper.com.jumpropetrictionary.MyGridView
        android:id="@+id/level_1_grid_view_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner_shadow"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/level_1_title_profile"
        android:layout_marginTop="16dp"
        android:drawSelectorOnTop="true"
        android:numColumns="3"
        android:stretchMode="columnWidth" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level 2"
        android:id="@+id/level_2_title_profile"
        android:background="@drawable/rounded_corner_shadow_red"
        android:textSize="18sp"
        android:layout_alignParentBottom="false"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="false"
        android:layout_below="@+id/level_1_grid_view_profile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        android:textColor="#ffffff" />

    <trictionary.jumproper.com.jumpropetrictionary.MyGridView
        android:id="@+id/level_2_grid_view_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner_shadow"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/level_2_title_profile"
        android:layout_marginTop="16dp"
        android:drawSelectorOnTop="true"
        android:numColumns="3"
        android:stretchMode="columnWidth"
        android:verticalSpacing="8dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level 3"
        android:id="@+id/level_3_title_profile"
        android:background="@drawable/rounded_corner_shadow_red"
        android:textSize="18sp"
        android:layout_alignParentBottom="false"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="false"
        android:layout_below="@+id/level_2_grid_view_profile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        android:textColor="#ffffff" />

    <trictionary.jumproper.com.jumpropetrictionary.MyGridView
        android:id="@+id/level_3_grid_view_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner_shadow"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/level_3_title_profile"
        android:layout_marginTop="16dp"
        android:drawSelectorOnTop="true"
        android:numColumns="3"
        android:stretchMode="columnWidth"
        android:verticalSpacing="8dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level 4"
        android:id="@+id/level_4_title_profile"
        android:background="@drawable/rounded_corner_shadow_red"
        android:textSize="18sp"
        android:layout_alignParentBottom="false"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="false"
        android:layout_below="@+id/level_3_grid_view_profile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        android:textColor="#ffffff" />

    <trictionary.jumproper.com.jumpropetrictionary.MyGridView
        android:id="@+id/level_4_grid_view_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner_shadow"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/level_4_title_profile"
        android:layout_marginTop="16dp"
        android:drawSelectorOnTop="true"
        android:numColumns="3"
        android:stretchMode="columnWidth"
        android:verticalSpacing="8dp"
        android:layout_marginBottom="@dimen/activity_vertical_margin" />

        <TextView
            android:text="..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profile_name"
            android:layout_below="@+id/profile_image"
            android:layout_alignEnd="@+id/basics_title_profile"
            android:textAlignment="gravity"
            android:gravity="right"
            android:padding="8dp"
            android:background="@drawable/rounded_corner_shadow_red"
            android:textColor="@color/white"
            android:layout_marginTop="16dp" />

        <View
            android:layout_width="match_parent"
            android:id="@+id/view"
            android:layout_below="@+id/stats_layout"
            android:layout_centerHorizontal="true"
            android:background="@android:color/black"
            android:layout_height="2dp"
            android:alpha=".25"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/profile_image"
            android:id="@+id/stats_layout"
            android:padding="16dp">

            <Space
                android:id="@+id/space8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:id="@+id/num_tricks_profile"
                android:textSize="14sp"
                android:layout_below="@+id/space8"
                android:textColor="@android:color/black" />
            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:id="@+id/num_level_1_tricks_profile"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_alignBaseline="@+id/level_1_tricks_mastered_profile" />
            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:id="@+id/num_level_2_tricks_profile"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_alignBaseline="@+id/level_2_tricks_mastered_profile" />
            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:id="@+id/num_level_3_tricks_profile"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_alignBaseline="@+id/level_3_tricks_mastered_profile" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:id="@+id/num_level_4_tricks_profile"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_alignBaseline="@+id/level_4_tricks_mastered_profile"
                android:text="0"
                android:textAlignment="viewEnd" />

            <TextView
                android:text="Level 1:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/level_1_tricks_mastered_profile"
                android:gravity="bottom"
                android:layout_below="@+id/num_tricks_profile"
                android:layout_marginTop="8dp"
                android:textSize="12sp" />
            <TextView
                android:text="Level 2:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/level_2_tricks_mastered_profile"
                android:gravity="bottom"
                android:layout_below="@+id/num_level_1_tricks_profile"
                android:layout_marginTop="8dp"
                android:textSize="12sp" />
            <TextView
                android:text="Level 3:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/level_3_tricks_mastered_profile"
                android:gravity="bottom"
                android:layout_below="@+id/num_level_2_tricks_profile"
                android:layout_marginTop="8dp"
                android:textSize="12sp" />
            <TextView
                android:text="Level 4:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/level_4_tricks_mastered_profile"
                android:gravity="bottom"
                android:layout_below="@+id/num_level_3_tricks_profile"
                android:layout_marginTop="8dp"
                android:textSize="12sp" />

            <TextView
                android:text="Total Tricks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tricks_mastered_profile"
                android:textAlignment="gravity"
                android:foregroundGravity="bottom"
                android:layout_above="@+id/level_1_tricks_mastered_profile"
                android:layout_alignParentStart="true"
                android:textSize="12sp" />

        </RelativeLayout>

        <TextView
            android:text="Basics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/basics_title_profile"
            android:padding="8dp"
            android:background="@drawable/rounded_corner_shadow_red"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_below="@+id/stats_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_ab_back_material"
            android:layout_alignParentStart="true"
            android:id="@+id/imageView38"
            android:layout_alignBottom="@+id/profile_image"
            android:padding="8dp"
            android:alpha=".75"
            android:onClick="back"
            android:layout_alignParentTop="true" />
    </RelativeLayout>
</ScrollView>
