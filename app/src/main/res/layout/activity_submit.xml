<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="trictionary.jumproper.com.jumpropetrictionary.Submit"
    tools:showIn="@layout/submit_toolbar"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@drawable/background">

    <Space
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/space6"
        android:layout_marginTop="30dp" />



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/video_view"
            android:layout_centerHorizontal="true"
            android:alpha=".75"
            android:padding="10dp"
            android:background="@drawable/rounded_corner_shadow"
            android:layout_above="@+id/button5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trick Name:"
                android:id="@+id/textView21"
                android:textSize="16dp"
                android:textColor="@android:color/black" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/trick_name"
                android:layout_gravity="center_horizontal"
                android:hint="Name (Required)" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Decription:"
                android:id="@+id/textView22"
                android:textSize="16dp"
                android:textColor="@android:color/black" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/trick_description"
                android:layout_gravity="center_horizontal"
                android:hint="Description (Optional)" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Level:"
                android:id="@+id/textView23"
                android:textSize="16dp"
                android:textColor="@android:color/black" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/trick_level"
                    android:layout_alignParentTop="false"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@+id/space7"
                    android:hint="(Optional)"
                    android:layout_alignTop="@+id/trick_org" />

                <Space
                    android:layout_width="20px"
                    android:layout_height="20px"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/space7" />

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/trick_org"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/space7" />
            </RelativeLayout>

        </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/button5"
        android:layout_gravity="center_horizontal"
        android:onClick="startUpload"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Record Video"
        android:id="@+id/textView24"
        android:background="@drawable/rounded_corner_shadow"
        android:alpha=".75"
        android:padding="10dp"
        android:layout_alignTop="@+id/video_view"
        android:layout_toEndOf="@+id/space6"
        android:layout_marginLeft="20dp"
        android:clickable="true"
        android:onClick="recordVideo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="From Gallery"
        android:id="@+id/textView25"
        android:layout_alignTop="@+id/video_view"
        android:layout_toStartOf="@+id/textView24"
        android:background="@drawable/rounded_corner_shadow"
        android:alpha=".75"
        android:padding="10dp"
        android:layout_marginRight="20dp"
        android:clickable="true"
        android:onClick="selectVideo" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView32"
        android:layout_below="@+id/textView25"
        android:layout_alignStart="@+id/textView25"
        android:src="@android:drawable/ic_menu_gallery"
        android:layout_alignEnd="@+id/textView25"
        android:padding="10dp"
        android:onClick="selectVideo" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView33"
        android:layout_below="@+id/textView24"
        android:layout_alignStart="@+id/textView24"
        android:src="@android:drawable/ic_menu_camera"
        android:layout_alignEnd="@+id/textView24"
        android:padding="10dp"
        android:onClick="recordVideo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Videos can be of any jump rope trick, whether the trick is already in the Tricktionary or not.\n\t-Please record your videos in landscape\n\t-Your videos can be no larger than 100Mb\n\t-If you are able to record in slow motion please do!"
        android:id="@+id/textView26"
        android:layout_below="@+id/imageView32"
        android:layout_centerHorizontal="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_alignBottom="@+id/video_view" />

    <VideoView
        android:id="@+id/video_view"
        android:layout_width="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:adjustViewBounds="true"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/space6"
        android:visibility="invisible" />

</RelativeLayout>
