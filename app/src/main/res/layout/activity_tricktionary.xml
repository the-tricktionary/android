<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:visibility="visible"
    tools:showIn="@layout/tricktionary_toolbar_layout"
    tools:context=".Tricktionary">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView3"
        android:background="@drawable/background">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tricktionary"
                android:id="@+id/tricktionary_title"
                android:layout_gravity="center_horizontal|top"
                android:background="@drawable/rounded_corner_shadow_red"
                android:singleLine="true"
                android:textSize="40dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:padding="10dp"
                android:textColor="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Basics"
                android:id="@+id/basics_title"
                android:background="@drawable/rounded_corner_shadow_red"
                android:textSize="20dp"
                android:padding="10dp"
                android:layout_below="@+id/imageView3"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:textColor="#ffffff" />

            <trictionary.jumproper.com.jumpropetrictionary.MyGridView
                android:id="@+id/basics_grid_view"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:background="@drawable/rounded_corner_shadow"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/basics_title"
                android:layout_marginTop="20dp"
                android:drawSelectorOnTop="true"
                android:numColumns="3"
                android:paddingLeft="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:stretchMode="columnWidth" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Level 1"
                android:id="@+id/level_1_title"
                android:background="@drawable/rounded_corner_shadow_red"
                android:textSize="20dp"
                android:layout_alignParentBottom="false"
                android:layout_alignParentTop="false"
                android:layout_alignParentLeft="false"
                android:layout_alignParentRight="false"
                android:layout_below="@+id/basics_grid_view"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:textColor="#ffffff" />

            <trictionary.jumproper.com.jumpropetrictionary.MyGridView
                android:id="@+id/level_1_grid_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner_shadow"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/level_1_title"
                android:layout_marginTop="20dp"
                android:drawSelectorOnTop="true"
                android:numColumns="3"
                android:paddingLeft="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:stretchMode="columnWidth" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Level 2"
                android:id="@+id/level_2_title"
                android:background="@drawable/rounded_corner_shadow_red"
                android:textSize="20dp"
                android:layout_alignParentBottom="false"
                android:layout_alignParentTop="false"
                android:layout_alignParentLeft="false"
                android:layout_alignParentRight="false"
                android:layout_below="@+id/level_1_grid_view"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:textColor="#ffffff" />

            <trictionary.jumproper.com.jumpropetrictionary.MyGridView
                android:id="@+id/level_2_grid_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner_shadow"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/level_2_title"
                android:layout_marginTop="20dp"
                android:drawSelectorOnTop="true"
                android:numColumns="3"
                android:paddingLeft="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:stretchMode="columnWidth"
                android:verticalSpacing="10dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Level 3"
                android:id="@+id/level_3_title"
                android:background="@drawable/rounded_corner_shadow_red"
                android:textSize="20dp"
                android:layout_alignParentBottom="false"
                android:layout_alignParentTop="false"
                android:layout_alignParentLeft="false"
                android:layout_alignParentRight="false"
                android:layout_below="@+id/level_2_grid_view"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:textColor="#ffffff" />

            <trictionary.jumproper.com.jumpropetrictionary.MyGridView
                android:id="@+id/level_3_grid_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner_shadow"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/level_3_title"
                android:layout_marginTop="20dp"
                android:drawSelectorOnTop="true"
                android:numColumns="3"
                android:paddingLeft="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:stretchMode="columnWidth"
                android:verticalSpacing="10dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Level 4"
                android:id="@+id/level_4_title"
                android:background="@drawable/rounded_corner_shadow_red"
                android:textSize="20dp"
                android:layout_alignParentBottom="false"
                android:layout_alignParentTop="false"
                android:layout_alignParentLeft="false"
                android:layout_alignParentRight="false"
                android:layout_below="@+id/level_3_grid_view"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:textColor="#ffffff" />

            <trictionary.jumproper.com.jumpropetrictionary.MyGridView
                android:id="@+id/level_4_grid_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner_shadow"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/level_4_title"
                android:layout_marginTop="20dp"
                android:drawSelectorOnTop="true"
                android:numColumns="3"
                android:paddingLeft="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:stretchMode="columnWidth"
                android:verticalSpacing="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" View All "
                android:id="@+id/textView"
                android:background="@drawable/rounded_corner_shadow_red"
                android:textSize="20dp"
                android:onClick="viewCurrentSettings"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="0dp"
                android:padding="10dp"
                android:layout_below="@+id/tricktionary_title"
                android:layout_toStartOf="@+id/level_1_title"
                android:layout_marginTop="15dp"
                android:clickable="true"
                android:textColor="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search"
                android:id="@+id/textView5"
                android:background="@drawable/rounded_corner_shadow_red"
                android:textSize="20dp"
                android:onClick="startSearch"
                android:layout_marginRight="0dp"
                android:layout_marginLeft="15dp"
                android:padding="10dp"
                android:layout_below="@+id/tricktionary_title"
                android:layout_toEndOf="@+id/level_1_title"
                android:layout_marginTop="15dp"
                android:clickable="true"
                android:textColor="#ffffff" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80sp"
                android:id="@+id/imageView3"
                android:src="@drawable/icon_alpha"
                android:padding="10dp"
                android:onClick="mainMenu"
                android:layout_below="@+id/tricktionary_title"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView6"
                android:layout_gravity="left|top"
                android:src="@drawable/ic_ab_back_material"
                android:padding="20dp"
                android:alpha=".75"
                android:scaleType="fitXY"
                android:onClick="mainMenu"
                android:layout_alignTop="@+id/tricktionary_title"
                android:layout_toStartOf="@+id/tricktionary_title" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView14"
                android:layout_alignBottom="@+id/textView5"
                android:layout_toEndOf="@+id/textView5"
                android:src="@drawable/ic_search_api_material"
                android:layout_alignTop="@+id/textView5"
                android:background="@drawable/rounded_corner_shadow_red"
                android:tint="#ffffff"
                android:onClick="startSearch" />

        </RelativeLayout>
    </ScrollView>

</FrameLayout>