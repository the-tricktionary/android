<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".activities.Tricktionary"
    android:id="@+id/tricktionary_layout">

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/background">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tricktionary_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/rounded_corner_shadow_red"
                android:gravity="center"
                android:padding="16dp"
                android:text="Tricktionary"
                android:textAlignment="gravity"
                android:textColor="#ffffff"
                android:textSize="24sp"
                android:transitionName="@string/tricktionary_transition" />

            <trictionary.jumproper.com.jumpropetrictionary.customviews.MyGridView
                android:id="@+id/basics_grid_view"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/basics_title"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/rounded_corner_shadow"
                android:drawSelectorOnTop="true"
                android:numColumns="3"
                android:stretchMode="columnWidth"
                android:padding="8dp"/>

            <TextView
                android:id="@+id/level_1_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="false"
                android:layout_below="@+id/basics_grid_view"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/rounded_corner_shadow_red"
                android:gravity="center"
                android:padding="16dp"
                android:text="Level 1"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <trictionary.jumproper.com.jumpropetrictionary.customviews.MyGridView
                android:id="@+id/level_1_grid_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/level_1_title"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/rounded_corner_shadow"
                android:drawSelectorOnTop="true"
                android:numColumns="3"
                android:stretchMode="columnWidth"
                android:padding="8dp"/>

            <TextView
                android:id="@+id/level_2_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="false"
                android:layout_below="@+id/level_1_grid_view"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/rounded_corner_shadow_red"
                android:gravity="center"
                android:padding="16dp"
                android:text="Level 2"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <trictionary.jumproper.com.jumpropetrictionary.customviews.MyGridView
                android:id="@+id/level_2_grid_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/level_2_title"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/rounded_corner_shadow"
                android:drawSelectorOnTop="true"
                android:numColumns="3"
                android:stretchMode="columnWidth"
                android:padding="8dp" />

            <TextView
                android:id="@+id/level_3_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="false"
                android:layout_below="@+id/level_2_grid_view"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/rounded_corner_shadow_red"
                android:gravity="center"
                android:padding="16dp"
                android:text="Level 3"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <trictionary.jumproper.com.jumpropetrictionary.customviews.MyGridView
                android:id="@+id/level_3_grid_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/level_3_title"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/rounded_corner_shadow"
                android:drawSelectorOnTop="true"
                android:numColumns="3"
                android:stretchMode="columnWidth"
                android:padding="8dp"/>

            <TextView
                android:id="@+id/level_4_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="false"
                android:layout_below="@+id/level_3_grid_view"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/rounded_corner_shadow_red"
                android:gravity="center"
                android:padding="16dp"
                android:text="Level 4"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <trictionary.jumproper.com.jumpropetrictionary.customviews.MyGridView
                android:id="@+id/level_4_grid_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/level_4_title"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/rounded_corner_shadow"
                android:drawSelectorOnTop="true"
                android:numColumns="3"
                android:stretchMode="columnWidth"
                android:padding="8dp" />


            <ProgressBar
                android:id="@+id/loading_tricks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:padding="50dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tricktionary_title"
                android:layout_alignEnd="@+id/basics_grid_view"
                android:layout_alignTop="@+id/tricktionary_title"
                android:layout_toEndOf="@+id/tricktionary_title"
                android:alpha=".75"
                android:onClick="startSearch"
                android:padding="16dp"
                android:src="@drawable/ic_search_api_material"
                android:layout_alignStart="@+id/imageView31" />

            <ImageView
                android:id="@+id/imageView31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/checkBox"
                android:layout_alignEnd="@+id/basics_title"
                android:layout_below="@+id/tricktionary_title"
                android:background="@drawable/rounded_corner_shadow_red"
                android:onClick="submitTrick"
                android:padding="16dp"
                android:src="@drawable/ic_file_upload_black_24dp"
                android:tint="@color/white" />

            <TextView
                android:id="@+id/basics_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/checkBox"
                android:layout_centerInParent="false"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/rounded_corner_shadow_red"
                android:gravity="center"
                android:padding="16dp"
                android:text="Basics"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/checkBox"
                style="@style/RobotoCheckBoxStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView3"
                android:layout_centerHorizontal="true"
                android:layout_margin="8dp"
                android:checked="true"
                android:text="Show Completed Tricks"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/imageView34"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/basics_title"
                android:layout_below="@+id/tricktionary_title"
                android:background="@drawable/rounded_corner_shadow_red"
                android:onClick="viewStats"
                android:padding="16dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_assessment_black_24dp"
                android:tint="@color/white" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tricktionary_title"
                android:layout_centerHorizontal="true"
                android:background="@drawable/rounded_corner_shadow_red"
                android:onClick="viewProfile"
                android:padding="16dp"
                android:src="@drawable/ic_account_circle_black_24dp"
                android:tint="@color/white" />

            <ImageView
                android:id="@+id/imageView37"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tricktionary_title"
                android:layout_alignEnd="@+id/imageView34"
                android:layout_alignStart="@+id/basics_grid_view"
                android:layout_alignTop="@+id/tricktionary_title"
                android:layout_toStartOf="@+id/tricktionary_title"
                android:alpha=".5"
                android:onClick="openSettings"
                android:padding="16dp"
                android:src="@drawable/ic_settings_black_48dp" />

        </RelativeLayout>
    </ScrollView>

</FrameLayout>