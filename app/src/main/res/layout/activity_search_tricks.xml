<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="trictionary.jumproper.com.jumpropetrictionary.SearchTricks"
    android:background="@drawable/background">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="76dp"
        android:id="@+id/imageView2"
        android:src="@drawable/icon_alpha"
        android:padding="10dp"
        android:onClick="mainMenu"
        android:clickable="true"
        android:layout_below="@+id/editText"
        android:layout_centerHorizontal="true" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView2"
        android:layout_below="@+id/imageView2">

    </ScrollView>

    <ListView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/listview"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentEnd="true"
        android:background="@drawable/rounded_corner_shadow"
        android:alpha=".75"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:layout_alignTop="@+id/scrollView2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:hint="Search the Tricktionary" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  "
        android:id="@+id/search"
        android:layout_alignBottom="@+id/editText"
        android:layout_toEndOf="@+id/editText"
        android:typeface="monospace"
        android:textSize="30dp"
        android:background="@android:drawable/ic_menu_close_clear_cancel"
        android:onClick="searchButtonPressed"
        android:clickable="true"
        android:alpha=".75" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView8"
        android:layout_gravity="left|top"
        android:src="@drawable/abc_ic_ab_back_mtrl_am_alpha"
        android:alpha=".75"
        android:scaleType="fitXY"
        android:onClick="viewTricktionary"
        android:layout_above="@+id/imageView2"
        android:layout_toStartOf="@+id/editText"
        android:paddingRight="20dp"
        android:paddingBottom="5dp" />

</RelativeLayout>
