<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    package="trictionary.jumproper.com.jumpropetrictionary"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:showIn="@layout/main_activity_toolbar_layout"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:weightSum="1"
        android:id="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:name="trictionary.jumproper.com.jumpropetrictionary"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:baselineAligned="false"
            android:alpha="01"
            android:padding="8dp"
            android:weightSum="1"
            android:background="#8ce8e8e8">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="@string/trick_name"
                    android:textColor="#ff000000"
                    android:scaleType="centerCrop"
                    android:textSize="20sp"
                    android:typeface="normal"
                    android:alpha=".5"
                    android:textAlignment="center"
                    android:background="@drawable/rounded_corner_shadow"
                    android:padding="10dp"
                    android:layout_alignParentTop="false"
                    android:layout_centerHorizontal="true"
                    android:visibility="gone" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView15"
                    android:src="@drawable/full_screen"
                    android:tint="@color/textColor"
                    android:alpha=".75"
                    android:onClick="viewFullscreen"
                    android:padding="10dp"
                    android:layout_centerVertical="true"
                    android:layout_alignBottom="@+id/imageView5"
                    android:layout_toEndOf="@+id/imageView5" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView5"
                    android:src="@drawable/abc_ic_menu_share_mtrl_alpha"
                    android:clickable="true"
                    android:onClick="shareTrick"
                    android:padding="10dp"
                    android:alpha=".75"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/toolbar_logo"
                    android:layout_marginLeft="10dp"
                    android:tint="@color/textColor" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/toolbar_logo"
                    android:src="@drawable/icon_alpha"
                    android:padding="5dp"
                    android:onClick="mainMenu"
                    android:visibility="visible"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="3dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/imageView5"
                    android:src="@drawable/abc_ic_ab_back_material"
                    android:layout_alignBottom="@+id/toolbar_logo"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="15dp"
                    android:onClick="viewTricktionary"
                    android:tint="@color/textColor" />
            </RelativeLayout>

            <com.google.android.youtube.player.YouTubePlayerView
                android:id="@+id/youtube_view"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:alpha="1" />


            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginBottom="5dp"
                android:text="@string/trick_description"
                android:textColor="#ff000000"
                android:scaleType="centerCrop"
                android:textSize="16dp"
                android:alpha=".5"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@drawable/rounded_corner_shadow"
                android:layout_gravity="left"
                android:paddingTop="5dp"
                android:paddingBottom="5dp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="5px"
                android:background="?android:attr/listDivider"
                android:layout_marginBottom="5dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/level_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WJR Level: "
                    android:textColor="#ff000000"
                    android:scaleType="centerCrop"
                    android:textSize="16dp"
                    android:alpha=".5"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_gravity="left"
                    android:background="@drawable/rounded_corner_shadow"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@+id/space" />

                <TextView
                    android:id="@+id/fisac_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IRSF Level:"
                    android:textColor="#ff000000"
                    android:scaleType="centerCrop"
                    android:textSize="16dp"
                    android:alpha=".5"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_gravity="left"
                    android:background="@drawable/rounded_corner_shadow"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@+id/space"
                    android:layout_alignTop="@+id/level_label"
                    android:layout_alignBottom="@+id/level_label" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/fisac_expand"
                    android:layout_alignRight="@+id/fisac_level"
                    android:src="@drawable/ic_menu_moreoverflow_material"
                    android:layout_alignTop="@+id/fisac_level"
                    android:layout_alignBottom="@+id/fisac_level"
                    android:tint="#616161"
                    android:visibility="gone"
                    android:onClick="expandFisacLevel" />

                <Space
                    android:layout_width="20px"
                    android:layout_height="20px"
                    android:layout_alignBottom="@+id/fisac_level"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/space" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="5px"
                android:background="?android:attr/listDivider"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp" />

            <TextView
                android:id="@+id/type_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Basic"
                android:textColor="#ff000000"
                android:scaleType="centerCrop"
                android:textSize="16dp"
                android:alpha=".5"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_gravity="left|center_horizontal"
                android:background="@drawable/rounded_corner_shadow"
                android:paddingTop="5dp"
                android:paddingBottom="5dp" />


        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prequisites"
        android:id="@+id/view_prereqs"
        android:background="@drawable/rounded_corner_shadow"
        android:singleLine="false"
        android:textSize="16dp"
        android:padding="10dp"
        android:alpha=".75"
        android:onClick="viewPrereqs"
        android:clickable="true"
        android:layout_below="@+id/linearLayout"
        android:layout_toStartOf="@+id/space2"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next Tricks"
        android:id="@+id/view_next"
        android:textSize="16dp"
        android:background="@drawable/rounded_corner_shadow"
        android:alpha=".75"
        android:padding="10dp"
        android:onClick="viewNextTricks"
        android:clickable="true"
        android:layout_alignTop="@+id/view_prereqs"
        android:layout_toEndOf="@+id/space2"
        android:layout_marginLeft="30dp" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="ca-app-pub-2959515976305980/2055777865"
        android:visibility="gone">
    </com.google.android.gms.ads.AdView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView7"
        android:layout_gravity="left|top"
        android:src="@drawable/abc_ic_ab_back_material"
        android:padding="20dp"
        android:scaleType="fitXY"
        android:onClick="viewTricktionary"
        android:layout_above="@+id/linearLayout"
        android:layout_alignStart="@+id/linearLayout"
        android:alpha=".75"
        android:visibility="gone" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ad_exit"
        android:layout_above="@+id/adView"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_clear_material"
        android:onClick="hideAd"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView16"
        android:src="@drawable/forward"
        android:layout_alignTop="@+id/view_next"
        android:layout_alignBottom="@+id/view_next"
        android:background="@drawable/rounded_corner_shadow"
        android:alpha=".75"
        android:tint="@color/textColor"
        android:layout_alignEnd="@+id/linearLayout"
        android:layout_toEndOf="@+id/view_next"
        android:onClick="viewNextTricks" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView17"
        android:src="@drawable/abc_ic_ab_back_material"
        android:layout_alignTop="@+id/view_prereqs"
        android:layout_alignBottom="@+id/view_prereqs"
        android:layout_alignStart="@+id/linearLayout"
        android:layout_toStartOf="@+id/view_prereqs"
        android:background="@drawable/rounded_corner_shadow"
        android:alpha=".75"
        android:tint="@color/textColor"
        android:onClick="viewPrereqs" />

    <Space
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_alignBottom="@+id/view_next"
        android:layout_centerHorizontal="true"
        android:id="@+id/space2" />

</RelativeLayout>