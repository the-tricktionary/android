<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.MainMenu">

    <VideoView
        android:id="@+id/video_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:adjustViewBounds="true" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:alpha=".6"
        android:background="@drawable/background"></RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient">

        <TextView
            android:id="@+id/view_tricktionary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="false"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/title"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginTop="20sp"
            android:layout_toLeftOf="@+id/center"
            android:background="@drawable/rounded_corner_shadow_red"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:onClick="viewTricktionary"
            android:padding="5dp"
            android:text="Tricktionary"
            android:textAlignment="gravity"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:transitionName="@string/tricktionary_transition"
            android:typeface="normal" />

        <TextView
            android:id="@+id/speed_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/view_trick_tree"
            android:layout_alignTop="@+id/view_tricktionary"
            android:layout_marginRight="10sp"
            android:layout_toRightOf="@+id/center"
            android:background="@drawable/rounded_corner_shadow_red"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:onClick="loadSpeedData"
            android:padding="5dp"
            android:text="Speed Data"
            android:textAlignment="gravity"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:typeface="normal" />

        <TextView
            android:id="@+id/view_showmaker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/view_tricktionary"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginTop="20sp"
            android:layout_toLeftOf="@+id/center"
            android:background="@drawable/rounded_corner_shadow_red"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:onClick="viewShowmaker"
            android:padding="5dp"
            android:text="Show Writer"
            android:textAlignment="gravity"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:typeface="normal" />

        <TextView
            android:id="@+id/view_trick_tree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/view_tricktionary"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10sp"
            android:layout_marginTop="20sp"
            android:layout_toRightOf="@+id/center"
            android:background="@drawable/rounded_corner_shadow_red"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:onClick="viewSpeed"
            android:padding="5dp"
            android:text="Speed Timer"
            android:textAlignment="gravity"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:typeface="normal" />

        <ImageView
            android:id="@+id/settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/view_showmaker"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20sp"
            android:layout_marginTop="20sp"
            android:clickable="true"
            android:onClick="openSettings"
            android:src="@drawable/ic_settings_black_48dp"
            android:tint="@color/materialRed" />

        <ImageView
            android:id="@+id/view_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/settings"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/settings"
            android:layout_marginBottom="16dp"
            android:layout_toEndOf="@+id/settings"
            android:clickable="true"
            android:onClick="viewContact"
            android:padding="32dp"
            android:src="@drawable/ic_message_black_24dp"
            android:tint="@color/materialRed" />

        <ImageView
            android:id="@+id/view_webapp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/settings"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/settings"
            android:layout_marginBottom="16dp"
            android:layout_toStartOf="@+id/settings"
            android:clickable="true"
            android:onClick="viewWeb"
            android:padding="32dp"
            android:src="@drawable/ic_public_black_24dp"
            android:tint="@color/materialRed" />

        <ImageView
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/title"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginLeft="75sp"
            android:layout_marginRight="75sp"
            android:layout_marginTop="20sp"
            android:adjustViewBounds="true"
            android:alpha=".75"
            android:clickable="true"
            android:onClick="randomTrick"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_alpha"
            android:transitionName="@string/logo_transition" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="20sp"
            android:background="@drawable/rounded_corner_shadow_red"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:onClick="viewTricktionary"
            android:padding="5dp"
            android:text="Jump Rope\nTricktionary"
            android:textAlignment="gravity"
            android:textColor="#ffffff"
            android:textSize="30sp"
            android:typeface="normal" />

        <TextView
            android:id="@+id/center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_tricktionary"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20sp"
            android:padding="5dp"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/upload"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="0dp"
            android:layout_marginTop="0dp"
            android:alpha=".75"
            android:onClick="submitTrick"
            android:padding="10dp"
            android:tint="@color/materialRed"
            android:src="@drawable/ic_file_upload_black_24dp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/profile_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:alpha=".75"
        android:onClick="viewProfile"
        android:padding="10dp"
        android:tint="@color/materialRed"
        android:src="@drawable/ic_account_circle_black_24dp" />

</FrameLayout>
